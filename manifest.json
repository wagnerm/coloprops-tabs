{
  "name": "Colorado Property with Tabs",
  "version": "0.0.1",
  "description": "Transforms the coloproperty site to add links to properties so you can simply open tabs.",
  "manifest_version": 2,
  "permissions": ["declarativeContent", "storage"],
  // "background": {
  //   "scripts": ["src/background.js"],
  //   "persistent": true
  // }
  // "page_action": {
  //   "default_icon": "images/icon32.png"
  // }
  "content_scripts": [
    {
      "matches": [
        "https://coloproperty.com/*",
        "https://www.coloproperty.com/*"
      ],
      "js": [
        "src/background.js"
      ]
    }
  ]
}
